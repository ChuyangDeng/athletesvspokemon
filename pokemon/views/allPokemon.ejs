<!DOCTYPE html>
<html lang="en">
<head>

  <title> Pokemon </title>
  <%include templates/head.ejs%>
</head><!--/head-->
<body>

<%include templates/navibar.ejs%>


<div id="headerwrap">
  <div class="container">
    <h1>The Search Result Page</h1>
    <h2><%= title %></h2>
    <table class = "table table-striped table-hover">
      <% for (var i = 0; i < result.length; i++){%>
        <% var url = "https://s3-us-west-2.amazonaws.com/pokemonimage/icon/"+ result[i].image_no +".png" %>
        <tr class = "warning">
          <td><img src = <%=url%>></td>
          <td> <%= result[i].name %> </td>
          <td> <%= result[i].type %> </td>
          <td> <%= result[i].total %> </td>
          <td> <%= result[i].hp %> </td>
          <td> <%= result[i].attack %> </td>
          <td> <%= result[i].defense %> </td>
          <td> <%= result[i].speed %> </td>
          <td> <%= result[i].image_no %> </td>
          <td> <%= i %></td>
          <td>&nbsp</td>
        </tr>
      <%}%>
    </table>

  </div>
</div>

<% include templates/footer.ejs%>

</body>
</html>
